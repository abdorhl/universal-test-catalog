{
  "name": "universal-test-catalog",
  "version": "0.1.0",
  "description": "Universal testing catalog CLI for web, performance, API, and mobile scaffolding.",
  "type": "module",
  "bin": {
    "utc": "src/index.js"
  },
  "scripts": {
    "postinstall": "playwright install --with-deps || echo 'Playwright install skipped'",
    "web:test": "playwright test",
    "perf:audit": "node src/runners/perf.js",
    "api:run": "node src/runners/api.js",
    "mobile:scaffold": "node src/runners/mobile.js",
    "setup": "node src/runners/setup.js",
    "ui": "node src/server/ui.js"
  },
  "dependencies": {
    "axe-playwright": "^2.0.0",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "execa": "^9.3.0",
    "prompts": "^2.4.2",
    "express": "^4.19.2",
    "open": "^10.1.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.46.0",
    "lighthouse": "^12.3.0",
    "newman": "^6.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
